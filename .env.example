# Server Configuration
NODE_ENV=development
PORT=3000
API_KEY=

# MultiversX Configuration
MULTIVERSX_API_URL=https://api.multiversx.com
MULTIVERSX_GATEWAY_URL=https://gateway.multiversx.com
MULTIVERSX_CHAIN_ID=1
MULTIVERSX_WALLET_MNEMONIC=twelve words mnemonic phrase here for your wallet
MULTIVERSX_NETWORK=mainnet

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_TTL=86400
REDIS_PASSWORD=

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=./logs/app.log
LOG_MAX_SIZE=20m
LOG_MAX_FILES=14d

# Rate Limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# Security
CORS_ORIGIN=*
HELMET_ENABLED=true

# Webhook Configuration
WEBHOOK_TIMEOUT=5000
WEBHOOK_RETRY_ATTEMPTS=3

# Gas Configuration
GAS_LIMIT=50000
GAS_PRICE=1000000000

# Monitoring
HEALTH_CHECK_INTERVAL=30000